@model Week02.Models.RegisterViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
{

    @Html.AntiForgeryToken()
    <span class="login100-form-title">
        Member Register
    </span>
    <label>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </label>
    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Email" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


    <div class="wrap-input100 validate-input" data-validate="Your full name is required">
        @Html.TextBoxFor(m => m.NameCus, new { @class = "input100", placeholder = "Your full name" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-user" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.NameCus, "", new { @class = "text-danger" })

    <div class="wrap-input100 validate-input" data-validate="Your full name is required">
        @Html.TextBoxFor(m => m.PhoneNumberCus, new { @class = "input100", placeholder = "Your number phone" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-phone" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.PhoneNumberCus, "", new { @class = "text-danger" })

    <div class="wrap-input100 validate-input" data-validate="Your address is required">
        @Html.TextBoxFor(m => m.AddressCus, new { @class = "input100", placeholder = "Your address" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-address-card" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.AddressCus, "", new { @class = "text-danger" })

    <div class="wrap-input100 validate-input" data-validate="Your date of birth is required">
        @Html.TextBoxFor(m => m.DateCus, new { @class = "input100", placeholder = "dd/MM/yyyy" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-birthday-cake" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.DateCus, "", new { @class = "text-danger" })


    <div class="wrap-input100 validate-input" data-validate="Password is required">
        @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Password" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

    <div class="wrap-input100 validate-input" data-validate="Re-Password is required">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", placeholder = "Re-Password" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>
    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    

    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Register
        </button>
    </div>

    <div class="text-center p-t-136">
        <a class="txt2" href="#">

            @Html.ActionLink("Login your Account", "Login", "Account")
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
}

