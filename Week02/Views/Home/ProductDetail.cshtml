        ViewBag.Nsx_sp = p.Nsx_sp;
        <div class="content_half float_l">
            <a rel="lightbox[portfolio]" href="~/images/product/@p.Hinh_sp"><img src="~/images/product/@p.Hinh_sp" alt="image" /></a>
        </div>
        <form name="myForm" method="post" action="@Url.Action("OrderMoreItem", "ShoppingCart", new { id  = p.ID_sp})" onchange="return checkQuantity()">
