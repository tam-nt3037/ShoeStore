                                <td>In Stock</td>
                            }
                            else
                            {
                                <td>Out of Stock</td>
                            }
                        }

                    </tr>
                    <tr>
                        <td>Model:</td>
                        <td width="100px">@p.Ten_sp <b style="font-size:8px">@p.ID_sp</b></td>
                    </tr>
                    <tr>
                        <td>Manufacturer:</td>
                        <td>@p.Nsx_sp</td>
                    </tr>
                    <tr>
                        <td>Quantity</td>
                        <td><input id="quantityProducts" name="quantityProducts" type="number" value="1" min="1" max="5" style="width: 40px; text-align: left" runnat="server" /></td>
                    </tr>
                </table>
                <div class="cleaner h20"></div>
                <p>This product is excluded from all promotional discounts and offers.</p>
                @if (p.So_luong > 0)
                {
                    @*<a href='@Url.Action("OrderNow", "ShoppingCart", new { id  = p.ID_sp})' class="addtocart"></a>*@
                    <button type="submit" class="buttonTransparent" onclick="href='@Url.Action("OrderMoreItem", "ShoppingCart", new { id  = p.ID_sp})'"><img src="~/images/templatemo_addtocart.png" /></button>
                }
            </div>
        </form>
        <div class="cleaner h30"></div>

        <h5>Product Description</h5>
        <p>@p.Mo_ta</p>

    }
